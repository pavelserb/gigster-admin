# === Compression ===
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/css application/javascript application/json image/svg+xml
</IfModule>

<IfModule mod_brotli.c>
  BrotliCompressionQuality 5
  AddOutputFilterByType BROTLI_COMPRESS text/html text/plain text/css application/javascript application/json image/svg+xml
</IfModule>

# === Caching ===
<IfModule mod_expires.c>
  ExpiresActive On

  # HTML/JSON — без кэша
  <FilesMatch "\.(html?|json)$">
    ExpiresDefault "access plus 0 seconds"
  </FilesMatch>

  # CSS/JS/SVG — 7 дней
  <FilesMatch "\.(css|js|mjs|svg)$">
    ExpiresDefault "access plus 7 days"
  </FilesMatch>

  # Медиа и шрифты — 1 год immutable
  <FilesMatch "\.(png|jpe?g|webp|gif|ico|mp4|webm|woff2?)$">
    ExpiresDefault "access plus 1 year"
  </FilesMatch>
</IfModule>

<IfModule mod_headers.c>
  # Cache-Control в соответствии с Expires
  <FilesMatch "\.(html?|json)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "0"
  </FilesMatch>
  <FilesMatch "\.(css|js|mjs|svg)$">
    Header set Cache-Control "public, max-age=604800"
  </FilesMatch>
  <FilesMatch "\.(png|jpe?g|webp|gif|ico|mp4|webm|woff2?)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>

  # Security headers
  Header always set X-Content-Type-Options "nosniff"
  Header always set X-Frame-Options "SAMEORIGIN"
  Header always set Referrer-Policy "strict-origin-when-cross-origin"
  Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"

  # CSP (как в nginx.conf): Google Fonts + OSM iframe + JSON files + inline scripts + Analytics scripts + Tracking images + Site images
  Header always set Content-Security-Policy "default-src 'self'; img-src 'self' data: https://www.facebook.com https://www.googletagmanager.com https://www.google-analytics.com https://www.gigster.pro; media-src 'self' blob:; script-src 'self' 'unsafe-inline' https://connect.facebook.net https://www.googletagmanager.com https://analytics.tiktok.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; connect-src 'self' data: blob:; frame-ancestors 'self'; frame-src https://www.openstreetmap.org https://www.google.com https://maps.google.com;"
</IfModule>

# Запрет доступа к служебной папке (если вдруг под веб-корнем)
RedirectMatch 404 ^/artbat-prague/_server/.*$
